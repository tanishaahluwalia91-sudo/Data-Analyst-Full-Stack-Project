use netflix_db;

select count(*) from netflix_cleaned_data;

select * from netflix_cleaned_data;

select Title from netflix_cleaned_data where title = 'يوم الدين';

use netflix_db;
select * from netflix_cleaned_data;

select count(*) from netflix_cleaned_data;

#How many total titles are available on Netflix?
select count(title) from netflix_cleaned_data;

#How many total movies are available on netflix?
select count(type) from netflix_cleaned_data where type = 'Movie';
select type, count(*) as total from netflix_cleaned_data group by type;

#Which country produces the most Netflix content?
SELECT * FROM netflix_cleaned_data;
SELECT country, count(*) as total from netflix_cleaned_data group by country order by total desc;



#Who are the top 10 most featured directors?
SELECT Director, count(*) as total from netflix_cleaned_data group by Director order by total desc limit 11;



#What’s the most common rating (PG, TV-MA, R, etc.) by region?


use netflix_db ;

select * from netflix_cleaned_data;

select Country, Rating, count(*) as total from netflix_cleaned_data group by Country, Rating order by total desc;

#Which year saw the highest number of releases?
select * from netflix_cleaned_data;

select Release_Year, count(*) as total from netflix_cleaned_data group by release_year order by total desc limit 10;

#What is the trend of Netflix releases over time (2008–2025)?

select * from netflix_cleaned_data where release_year between 2008 and 2025 order by release_year desc;

#What are the top 10 actors who appear in the most titles?
select * from netflix_cleaned_data;

select cast, count(*) as total from netflix_cleaned_data group by cast order by total desc limit 10;

#How many titles belong to each genre/category (listed_in)? 
select genre, count(*) as total from netflix_cleaned_data group by genre order by total desc;

#Which genres are most popular in each country?
select * from netflix_cleaned_data;

select country, genre, count(*) as total from netflix_cleaned_data group by country, genre order by country desc;

#Which countries dominate Netflix Originals (if mentioned in title or description)? - There are no 'Netflix Orignals' in the data set
select * from netflix_cleaned_data;

select title from netflix_cleaned_data where title like '%Netflix Orignals%'; 

#How many titles were added each month/year (date_added trend)?
select date_added, count(*) as total from netflix_cleaned_data group by date_added order by total desc;

